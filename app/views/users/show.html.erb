<div class="container">
	<div class="group-panel center">
		<h2>Your groups.</h2>
		<% @user.groups.each do |group| %>
			<p>
				<%= link_to group.name, group %>
			</p>
		<% end %>
		<br />
		<h2>Create a new group.</h2><br />
		<div class="create-group">
			<%= form_for @group do |f| %>
			  <%= f.text_field :name, placeholder: 'name', class: 'group-name' %><br />
			  <%= f.hidden_field :user_id, :value => @user.id %>

			  <br /><%= f.submit "Create New", class: "btn btn-secondary" %>
			<% end %>
		</div>
		<br />
		<%= link_to "Home", root_path %>
		<br /><br />
		<small>Built by: The <%= link_to "Study Space", 'https://www.study.space' %> Team.</small>
	</div>
	<div class="main-panel">
		<h2 class="center" id="name">Hello, <%= @user.first_name %> <%= @user.last_name %>!</h2>
		<br />
		<div class="panel-wrap">
			<div class="form">

			<%= form_for @user, :url => { :action => :update } do |f| %>
				First Name: <%= f.text_field :first_name, class: 'form-group form-control', type: 'first-name' %>
        Last Name: <%= f.text_field :last_name, class: 'form-group form-control', type: 'last-name' %>
        Email: <%= f.text_field :email, class: 'form-group form-control', type: 'email' %>
        New Password: <%= f.password_field :password, class: 'form-group form-control', type: 'password' %>
        Password Confirmation: <%= f.password_field :password_confirmation, class: 'form-group form-control', type: 'password' %>
        <%= f.submit "Submit", class: 'btn btn-secondary'%>
			<% end %>
			</div>
		</div>
	</div>
</div>
