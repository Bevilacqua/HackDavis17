<header>
	<div class="textfield">
		<% if !current_user %>
			<%= form_tag '/login' do %>

			  Email: <%= text_field_tag :email %>
			  Password: <%= password_field_tag :password %>
			  <%= submit_tag "Login" %>

			<% end %>
			<%= link_to "Signup", signup_path %>
		<% else %>
			<p>
				<%= link_to "#{current_user.first_name} #{current_user.last_name}", current_user %>
				<%= link_to "Logout", logout_path %>
			</p>
		<% end %>
	</div>
</header>

<div class="container">
	<div class="hide_over left-panel center">
		<img src="https://s3-us-west-1.amazonaws.com/studyspaceimages/Site/logo.png" width="65%">

		<h5 style="font-weight: lighter;">welcome to</h5>
		<h1 class="display-1" style="font-weight: bolder;">Collab</h1>
		<h5 style="font-weight: lighter;"><em>study groups made simple</em></h5>

		<br /> <br /><br />

		<%= link_to "SIGN UP", signup_path, class: "btn btn-secondary btn-lg" %>
		<br /><br /><br />
		<%= link_to "LOG  IN", login_path, class: "btn btn-secondary btn-lg" %>
	</div>
	<div class="hide_over right-panel bak-img">
		
	</div>
</div>